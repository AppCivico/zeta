server {
    listen 80 default_server;
    server_name publicidadeinteligente.com.br www.publicidadeinteligente.com.br;
    rewrite ^ https://www.publicidadeinteligente.com.br$request_uri? permanent;
}


server {
    listen 4040;
    server_name www.publicidadeinteligente.com.br;

    client_max_body_size 30M;

    location /TnhXI0H.html {
	root /www/aware/pi/web/root;
        break;
    }

    location /robots.txt {
        root /www/aware/pi/web/root;
        break;
    }

    location /static {
        root /www/aware/pi/web/root;
        expires 30d;
        break;

    }

    location / {
        add_header Pragma "no-cache";
        add_header Cache-control "no-cache, must-revalidate, private, no-store";
        expires -1s;

        proxy_read_timeout 1000;

        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://127.0.0.1:8200;
    }

}
